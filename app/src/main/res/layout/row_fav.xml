<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_channel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/cardClr"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <LinearLayout
                android:id="@+id/notification_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/channel_img2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_channel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Geo News"
                        android:textColor="@color/green"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/description_channel2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Get in touch with all siyuations of All countries with GEO news."
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textColor="@color/gray"
                            android:textSize="11sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/cast_channel2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Headlines"
                                android:textStyle="bold"
                                android:visibility="visible"
                                android:textColor="@color/blue"
                                android:textSize="12sp"/>

                            <View
                                android:layout_width="5dp"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:id="@+id/time_channel2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="03:55"
                                android:textStyle="bold"
                                android:visibility="visible"
                                android:layout_weight="1"
                                android:textColor="@color/white"
                                android:textSize="12sp"/>

                            <ImageView
                                android:id="@+id/btn_fav2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_below="@+id/notification_layout"
                                android:layout_alignParentRight="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/shape_appclr2"
                                android:src="@drawable/ic_baseline_favorite_24" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/link_channel2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="google.com"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>