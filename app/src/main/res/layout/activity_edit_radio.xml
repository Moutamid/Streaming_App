<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appClr"
    tools:context=".Edit_Radio">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        app:title="Edit Radio Items"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/radio_id2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_appclr2"
                android:hint="Radio Number"
                android:padding="10dp"
                android:enabled="false"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/radio_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_appclr2"
                android:hint="Name"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/radio_link2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_appclr2"
                android:hint="Link"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#878787"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/radio_img_add2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_add_24"
                    android:visibility="visible" />

            </LinearLayout>

            <Button
                android:id="@+id/radio_btn_add2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit All Data" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>